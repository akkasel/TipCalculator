<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Because this is for the dark mode, so we have to use the 'light' variant of every main color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_light</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!-- Text Input Fields (EditText) -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <!-- Radio Button -->
        <item name="radioButtonStyle">@style/Widget.TipCalculator.CompoundButton.RadioButton</item>

        <!-- Switch -->
        <item name="switchStyle">@style/Widget.TipCalculator.CompoundButton.Switch</item>

    </style>
</resources>